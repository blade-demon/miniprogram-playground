<!-- 自定义导航栏组件 -->
<view class="custom-nav-bar" style="background: {{backgroundStyle}};">
  <!-- 状态栏占位 -->
  <view class="status-bar" style="height: {{statusBarHeight}}px;"></view>
  
  <!-- 导航栏内容 -->
  <view class="nav-content" style="height: {{navBarHeight}}px;">
    <!-- 背景图片 -->
    <image 
      wx:if="{{backgroundImage}}" 
      class="nav-bg-image" 
      src="{{backgroundImage}}" 
      mode="{{backgroundImageMode}}"
      style="opacity: {{backgroundImageOpacity}}; filter: {{backgroundImageFilter}};"
    />
    
    <!-- 渐变背景 -->
    <view 
      wx:if="{{gradientColors}}" 
      class="nav-gradient" 
      style="background: linear-gradient({{gradientDirection}}, {{gradientColors}});"
    />
    
    <!-- 左侧按钮 -->
    <view class="nav-left" wx:if="{{showBackButton}}">
      <view class="nav-btn" bindtap="onBackTap">
        <image class="nav-icon" src="{{backIcon}}" />
      </view>
    </view>
    
    <!-- 标题 -->
    <view class="nav-title" style="color: {{titleColor}};">
      <text>{{title}}</text>
    </view>
    
    <!-- 右侧按钮 -->
    <view class="nav-right">
      <view 
        wx:for="{{rightButtons}}" 
        wx:key="index"
        class="nav-btn" 
        bindtap="onRightButtonTap" 
        data-index="{{index}}"
      >
        <image class="nav-icon" src="{{item.icon}}" />
      </view>
    </view>
  </view>
</view> 
<!--components/product-card/product-card.wxml-->
<view class="product-card" bindtap="onCardTap">
  <view class="product-image">
    <image src="{{product.image}}" mode="aspectFill" />
    <view wx:if="{{product.tag}}" class="product-tag">{{product.tag}}</view>
  </view>
  <view class="product-info">
    <view class="product-title">{{product.title}}</view>
    <view class="product-desc">{{product.description}}</view>
    <view class="product-price">
      <text class="price-current">¥{{product.price}}</text>
      <text wx:if="{{product.originalPrice}}" class="price-original">¥{{product.originalPrice}}</text>
    </view>
    <view class="product-actions">
      <button class="btn-add-cart" bindtap="onAddToCart" data-product="{{product}}">加入购物车</button>
    </view>
  </view>
</view>